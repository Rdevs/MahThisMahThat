<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_yellow"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_yellow"
        android:minHeight="?attr/actionBarSize">


        <Button
            android:id="@+id/bt_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_button_yellow_dark"
            android:gravity="center"
            android:padding="10dp"
            android:text="PREV"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


        <Button
            android:id="@+id/bt_done_settext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_button_yellow_dark"
            android:gravity="center"
            android:padding="10dp"
            android:text="NEXT"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mah1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/mah"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_this"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/commonroundedcornerlayout"
            android:gravity="center"
            android:hint="This"
            android:imeOptions="actionNext"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold">

            <requestFocus></requestFocus>
        </EditText>


        <TextView
            android:id="@+id/tv_mah2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/mah"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_that"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/commonroundedcornerlayout"
            android:gravity="center"
            android:hint="That"
            android:imeOptions="actionDone"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>